<!doctype html>
<html>
<head><meta charset="utf-8"><title>{{.Title}}</title></head>
<body>
<h1>{{.Title}}</h1>
<form method="POST" action="/quiz/{{.Name}}/submit">
  {{range $i, $q := .Qs}}
    <fieldset>
      <legend>{{$q.Text}}</legend>
      {{range $j, $opt := $q.Options}}
        {{ $val := printf "%c" (add $j 65) }}
        <label>
          <input type="radio" name="q{{$i | add1}}" value="{{$val}}"> {{$opt}}
        </label><br>
      {{end}}
    </fieldset>
  {{end}}
  <button type="submit">Soumettre</button>
</form>
</body>
</html>
